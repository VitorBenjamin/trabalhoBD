
require_once '../querys/conexaoPDO.php';

Class UsuarioDao{

	public function inserir($query, $lista){

		$conn = Conexao::getConexao();
		$stmt = $conn->prepare($query);
		$stmt->execute($lista);
		echo $stmt->rowCount();

	}
	public function atualizar(){
	
		$conn = Connection::getConexao();
		$stmt = $conn->prepare($query);
		$stmt->execute($lista);
		echo $stmt->rowCount();

	}
	public function consultar(){
	
		$conn = Connection::getConexao();
		$stmt = $conn->prepare($query);
		$stmt->execute($lista);
		echo $stmt->rowCount();

	}
	public function deletar(){
	
		$conn = Connection::getConexao();
		$stmt = $conn->prepare($query);
		$stmt->execute($lista);
		echo $stmt->rowCount();
	}
}
